
@{
    ViewBag.Title = "Index";
}

<h2>Bank Management</h2>

<table class="table table-bordered table-striped " id="tble">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Balance</th>
            <th>Show Balance</th>
            <th></th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<form>
    <div>
        <label>Name</label>
        <input type="text" class="form-control" id="accountName" />
    </div>
    <div>
        <label>Address</label>
        <input type="text" class="form-control" id="address" />
    </div>
    <div>
        <label>Phone</label>
        <input type="text" class="form-control" id="phone" />
    </div>
    <div>
        <label>Balance</label>
        <input type="text" class="form-control" id="balance" />
    </div>
    <br />
    <button type="button" id="btnSave" class="btn btn-primary"> Save </button>
    <br />
</form>

<table class="table table-bordered table-striped " id="tbletrans">
    <thead>
        <tr>
            <th>Transaction Date</th>
            <th>Amount</th>
            <th>Operation</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
<div id="formtrans">
    <form>
        <div>
            <label>Date</label>
            <input type="date" class="form-control" id="date" />
        </div>
        <div>
            <label>Amount</label>
            <input type="text" class="form-control" id="amount" />
        </div>
        <div>
            <label>Description</label>
            <input type="text" class="form-control" id="description" />
        </div>
        <div>
            <label>Operation</label>
            <input type="text" class="form-control" id="operation" />
        </div>
        <br />
        <button type="button" id="btntrans" class="btn btn-primary"> Save Transaction </button>
        <br />
    </form>
</div>

<script src="~/Scripts/ajax/ajaxcall.js"></script>